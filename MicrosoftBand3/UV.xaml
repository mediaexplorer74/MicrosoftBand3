<Page
    x:Class="Microsoft_Band_Simulator.UV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft_Band_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="517*"/>
            <RowDefinition Height="483*"/>
        </Grid.RowDefinitions>
        
        <Rectangle Fill="White" Height="262" Width="3" 
                   HorizontalAlignment="Left" Margin="60,0,0,0" 
                   VerticalAlignment="Center" Grid.RowSpan="2" x:Name="UVSidebar"/>

        <Image Source="ms-appx:///Assets/back-arrow.png" Height="40" Width="40" 
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="80,-120,0,0"/>

        <Button x:Name="BackButton" Height="40" Width="40" Opacity="0"
                VerticalAlignment="Top" Margin="80,-20,0,0" Click="BackButton_Click"/>

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" x:Name="UVview" VerticalScrollMode="Disabled" HorizontalScrollMode="Enabled" Grid.RowSpan="2" Loaded="UVview_Loaded" Margin="60,0,0,0">
            <Grid Margin="0,0,0,0" Width="1360">
                <TextBlock x:Name="P1Label" HorizontalAlignment="Left" 
                           TextWrapping="Wrap" Text="UV Level" VerticalAlignment="Top" 
                           Height="60" Width="180" FontSize="40" IsColorFontEnabled="True" Margin="20,10,0,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                           Text="Press the action button to check the UV level." 
                           FontSize="30" Margin="20,80,0,0" Width="490"/>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Exposure Reminder" 
                           x:Name="P2Label" FontSize="40" Height="60" VerticalAlignment="Top" Margin="40,10,0,0"/>
                
                <ToggleButton x:Name="UVToggle" VerticalAlignment="Top" Margin="530,110,0,0"
                              Height="100" Width="100" Checked="UVToggle_Checked" Unchecked="UVToggle_Unchecked">
                    <Image x:Name="image" HorizontalAlignment="Center" Height="80" VerticalAlignment="Center" Width="80" Source="ms-appx:///Assets/Icons/UV.png"/>
                </ToggleButton>
                <TextBlock x:Name="ToggleText" VerticalAlignment="Top" Text="Off" FontSize="60" FontWeight="Bold" HorizontalAlignment="Left" Margin="660,106,0,0" Foreground="DarkGray"/>
                <TextBlock x:Name="MessageText" VerticalAlignment="Top" 
                           FontSize="40" HorizontalAlignment="Right" 
                           TextWrapping="WrapWholeWords" Text="Set a UV exposure reminder to keep you informed when you are getting exposure." Height="215" Width="420" Margin="0,10,0,0" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
